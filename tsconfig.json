{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2022",
        "moduleResolution": "Node",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
